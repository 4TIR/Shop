@model Order
<style>
    .center {
        height: 30em;
        display: flex;
        align-items: center;
        justify-content: center
    }

    h1.blocktext {
        margin-left: auto;
        margin-right: auto;
        width: 3em
    }
    .b1 {
        background: navy; 
        color: white; 
        font-size: 9pt; 
    }
</style>
<h1 class="blocktext"> Order</h1>
<div class="center">
    
    
    <form asp-action="Checkout" metchod="post" class="form-horizontal">
        <div class="form-group">
            <label asp-for="name">
            </label>
            <div class="col-nd-5">
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="surname">
            </label>
            <div class="col-nd-5">
                <input asp-for="surname" class="form-control" />
                <span asp-validation-for="surname" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="adress">
            </label>
            <div class="col-nd-5">
                <input asp-for="adress" class="form-control" />
                <span asp-validation-for="adress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="phone">
            </label>
            <div class="col-nd-5">
                <input asp-for="phone" class="form-control" />
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="email">
            </label>
            <div class="col-nd-5">
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
        </div>
        <input class="btn btn-danger mb-5" type="submit" value="End your order" />
    </form>
</div>
